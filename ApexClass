public class ListAccount{
    @AuraEnabled
    public static list<Account> fetchAccts(){
        list<Account> myrecords = [Select id,OwnerId,Name,Owner.Name,Phone,Website,AnnualRevenue from Account where Industry = 'Financial Services'];
        return myrecords;

    }
    @AuraEnabled
public static List<Account> findByName(String searchKey) {
        String name =  + searchKey + '%';
        return [SELECT id,Name,Owner.Name,Phone,Website,AnnualRevenue FROM Account WHERE name LIKE :name];
    }
    
    @AuraEnabled    
    public static boolean updateAccts( List < Account > updatedAccountList ) {    
            
        try {  
          
            update updatedAccountList;  
            return true;  
              
        } catch(Exception e) {  
          
            return false;  
              
        }  
            
    }    
    }
